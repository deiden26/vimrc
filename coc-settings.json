{
  "suggest.noselect": true,

  "diagnostic.errorSign": "ùó´",
  "diagnostic.warningSign": "‚ñ≤",
  "diagnostic.infoSign": "‚óè",
  "diagnostic.hintSign": "‚äô",
  "diagnostic.enable": true,

  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "solargraph.checkGemVersion": false,
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.rename": true,
  "solargraph.references": true,
  "solargraph.useBundler": true,
  "solargraph.commandPath": "$HOME/.local/share/mise/shims/solargraph",
  "solargraph.bundlerPath": "$HOME/.local/share/mise/shims/bundler",

  // "typescript.validate.enable": false,
  // "javascript.validate.enable": false,

  "python.linting.flake8Enabled": true,

  "elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",

  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": ["tc", "--enable-all-beta-lsp-features", "--lsp", "--disable-watchman"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
